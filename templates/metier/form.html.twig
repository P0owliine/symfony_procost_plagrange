{% extends 'layout.html.twig' %}

{% block title %}Metiers - Procost{% endblock %}

    {% block content %}
        <main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-book"></i>&nbsp;Edition d'un metier</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('main_homepage') }}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('metier_liste', {'page': 1}) }}">Metier</a>
                    </li>
                    <li class="breadcrumb-item">Edition d'un metier</li>
                </ul>
            </div>

            {% for flash_type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ flash_type }}" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% if (app.user.roles[0] != 'ROLE_EMPLOYE') %}
            <div class="tile">
                    {{ form_start(form) }}
                    <section>
                        <h3>Informations générales</h3>
                        <div class="row mt-4">
                            <div class="offset-md-2 col-md-10">
                                <div class="form-group row">
                                    {{ form_errors(form.nom) }}
                                    {{ form_label(form.nom, null, {'label_attr': {'class': 'control-label col-md-1'} }) }}

                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control col-md-3', 'placeholder': 'Ecrivez ici le nom du metier' } }) }}
                                </div>
                            </div>
                        </div>
                    </section>
                    <hr/>
                    <div class="row">
                        <div class="offset-md-6 col-md-6">
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
            </div>
            {% else %}
                <div class="tile text-center"> Vous ne diposez pas des droits nécessaires pour visualiser le contenu de cette page.</div>
            {% endif %}
        </main>
{% endblock %}
